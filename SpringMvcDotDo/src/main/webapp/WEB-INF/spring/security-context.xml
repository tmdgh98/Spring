<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<security:http pattern="/css/**" security="none" />
	<security:http pattern="/resources/**" security="none" />

	<security:http>
		<security:intercept-url pattern="/login.jsp"
			access="permitAll()" />
		<security:intercept-url pattern="/top.jsp"
			access="permitAll()" />
		<security:intercept-url pattern="/memberInsert*"
			access="permitAll()" />
		<security:intercept-url pattern="/admin/**"
			access="hasAuthority('ROLE_ADMIN')" />
		<security:intercept-url pattern="/**"
			access="isAuthenticated()" />
		<security:form-login
		      login-page="/login.jsp" 
		      login-processing-url="/login.do"
		      default-target-url="/top.jsp"
		      authentication-failure-url="/login.jsp"
		      username-parameter="memberid"
		      password-parameter="password"/> 
		<security:logout logout-url="/logout"
			logout-success-url="/top.jsp" />
		<security:csrf disabled="true" />
	</security:http>
	<security:authentication-manager>
		<security:authentication-provider user-service-ref="memberService">
